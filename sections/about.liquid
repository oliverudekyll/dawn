<div class="about">
  <div class="container">
    <div class="about__content">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.content != blank %}
        <div class="about__text">
          {{ section.settings.content }}
        </div>
      {% endif %}
    </div>

    {% if section.settings.image != blank %}
      <div class="about__image">
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        >
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "About",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Our Store"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Use this section to tell customers about your brand, story, mission, or vision. Add details about your company to connect with customers and establish trust.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About",
      "category": "Content"
    }
  ]
}
{% endschema %}
